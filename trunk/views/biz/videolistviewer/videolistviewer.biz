	function bookModeUser($mode,$userID){
		$al=new adlink("");
		$Vs=array();
		$Vs=$al->backVideoList($mode,$userID);
		#node->VBars=array();
		foreach($Vs as $v){
			$vb=new videobar("VBar".#nodeID.count(#node->VBars));
			$vb->bookInfo($v);
			$vb->bookMode($mode);
			#node->VBars[]=$vb;
		}
	}

	function frm(){
		$VBars="";
		foreach(#node->VBars as $vb){
			$VBars.="<div style='float:left;border:1px dotted gray;margin:5px;padding:5px;background-color:#F5F5FF;' >".$vb->_backframe()."</div>";
		}
		return <PHTML>
			<br>$VBars
		</PHTML>
	}
