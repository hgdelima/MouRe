#phpfunction

	function bookMode($mode){
		$al=new adlink("");
		$Vs=array();
		$Vs=$al->backVideoList($mode);
		#node->VBars=array();
		foreach($Vs as $v){
			$vb=new videobar("VBar".#nodeID.count(#node->VBars));
			$vb->bookInfo($v);
			$vb->bookMode($mode);
			#node->VBars[]=$vb;
		}
	}

	function frm(){
		$VBars="";
		foreach(#node->VBars as $vb){
			$VBars.=$vb->_backframe()."<hr>";
		}
		return <PHTML>
			<center>Choose a video to Publish</center>
			<br>$VBars
		</PHTML>
	}
