	function backAll(){
		$UID=osBackUserID();
		$q="SELECT * FROM #db->history WHERE UID=".$UID." ORDER BY date DESC";
		query($q);
		$html="<table border='1'>";
		$html.="<tr><th>TransactionID</th><th>date</th><th>type</th><th>amount</th><th>comments</th></tr>";
		while($row=fetch()){
			$html.="<tr>";
			$html.="<td>".$row['TID']."</td><td>".$row['date']."</td><td>".$row['type']."</td><td>".$row['amount']."</td><td>".$row['comments']."</td>";
			$html.="</tr>";
		}
		$html.="</table>";
		return $html;
	}

