	function backTotalPaid(){
		return #fun->backTotalPaidByUser(osBackUserID());
	}

	function backTotalPaidByUser($UID){
		$paid=0.0;
		query("SELECT SUM(paid) as totalPaid FROM #db->info WHERE advertisor=$UID");
		if($row=fetch()){
			$paid=$row['totalPaid'];
		}
		return $paid;
	}

