#phpfunction

	function onSelected($info){
		#fun->bookSelected(true);
		$d=array("tabName"=>#var->label);
		osBroadcast(#msg->tabChanged,$d);
	}

	function bookLabel($label){//String
		#var->label=$label;
		//_bookFrame(#frame->frmNotSelected);
	}

	function bookSelected($selected){//boolean
		if($selected){
			_bookFrame(#frame->frmSelected);
		}else{
			_bookFrame(#frame->frmNotSelected);
		}
	}

	function backLabel(){
		return #var->label;
	}

	function frmSelected(){
		osBackLink("selected","");
		$html=<PHTML>
			[{#var->label}]
		</PHTML>
		return $html;
	}

	function frmNotSelected(){
		$link=osBackLink("","selected");
		$html=<PHTML>
			<a href="$link">{#var->label}</a>
		</PHTML>
		return $html;
	}

