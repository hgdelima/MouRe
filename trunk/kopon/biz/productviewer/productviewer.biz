#biz
	productviewer

#family
	product

#var
	large=true

#node
	product product

#frame
	frmLarge,frmSmall

#phpfunction

	function bookSmall(){
		#var->large=false;
	}

	function bookLarge(){
		#var->large=true;
	}

	function bookProductUID($UID){
		#node->product->bookProductUID($UID);
		if(#var->large){
			_bookFrame(#frame->frmLarge);
		}else{
			_bookFrame(#frame->frmSmall);
		}
	}

	function frmLarge(){
		$title=#node->product->backTitle();
		$description=#node->product->backDescription();
		$price=#node->product->backPrice();
		$image=#node->product->backImage();
		$t=#node->product->backRemainingTime();
		$discount=#node->product->backDiscount();
		if($t<1){
			$time="";
			$buy="BUY (time out)";
		}else{
			$time=$t;
			$buy='<a href="">BUY</a>';
		}
		$html=<PHTML>
			<center>$title - price:$price you get $discount Discount $buy</center><br>
			(countdown code here)$time(till here)<br>
			<img src="$image"/>$description<hr>
		</PHTML>;
		return $html;
	}

	function frmSmall(){
		$title=#node->product->backTitle();
		$description=#node->product->backDescription();
		$price=#node->product->backPrice();
		$image=#node->product->backIcon();
		$time=#node->product->backRemainingTime();
		$discount=#node->product->backDiscount();
		$html=<PHTML>
			<center>$title - price:$price you get $discount Discount</center><br>
			(countdown code here)$time(till here)<br>
			<img src="$image"/>$description<hr>
		</PHTML>;
		return $html;
	}
