	}
	
	function bookIcon($tempPath){
		move_uploaded_file($tempPath,
			"biz/product/images" . "i" . #var->UID . ".jpg");		
	}
	
	function backAllUID(){
		$date=date("Ymd");
		$to=$date."0000";
		xquery($this,"select UID from #db->product where endtime<'$to' order by endtime asc");
		$ret=array();
		while($d=fetch()){
			$ret[]=$d['UID'];
		}
		return $ret;
	}
